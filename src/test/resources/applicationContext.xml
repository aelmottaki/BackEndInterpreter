<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/aop 
   http://www.springframework.org/schema/aop/spring-aop-3.0.xsd "
       xmlns:aop = "http://www.springframework.org/schema/aop">

    <!-- interpreters declaration -->
    <bean class="org.python.util.PythonInterpreter" name="embededPythonInterpreter" scope="prototype"/>

    <alias name="pythonInterpreterImpl" alias="pythonInterpreter"/>
    <bean class="com.pythoninterpreter.pythoninterpreter.services.impl.PythonInterpreterImpl" name="pythonInterpreterImpl" scope="singleton">
        <aop:scoped-proxy proxy-target-class="false"/>
        <property name="pythonInterpreter" ref="embededPythonInterpreter"/>
        <property name="codeFormatter" ref="codeFormatter"/>
    </bean>

    <alias name="DefaultInterpreterImpl" alias="defaultInterpreter"/>
    <bean class="com.pythoninterpreter.pythoninterpreter.services.impl.DefaultInterpreterImpl" name="DefaultInterpreterImpl">
        <aop:scoped-proxy proxy-target-class="false"/>
    </bean>

    <alias name="javaInterpreterImpl" alias="javaInterpreter"/>
    <bean class="com.pythoninterpreter.pythoninterpreter.services.impl.JavaInterpreterImpl" name="javaInterpreterImpl">
        <aop:scoped-proxy proxy-target-class="false"/>
    </bean>

    <!--  interpreter factory declaration -->
    <bean class="com.pythoninterpreter.pythoninterpreter.services.impl.InterpreterFactory" name="interpreterFactory" scope="singleton">
        <property name="interpreters">
            <map>
                <entry key="%python" value-ref="pythonInterpreter"/>
                <entry key="%java" value-ref="javaInterpreter"/>
            </map>
        </property>
        <property name="defaultInterpreter" ref="defaultInterpreter"/>
        <property name="codeFormatter" ref="codeFormatter"/>
    </bean>

    <!-- code formatter declaration -->
    <bean class="com.pythoninterpreter.pythoninterpreter.services.impl.CodeFormatterImpl" name="codeFormatter">
        <property name="regexFormat" value="%[a-zA-Z]{3,6}\s.*"/>
    </bean>


</beans>